SELECT SCHEMA_NAME FROM INFORMATION_SCHEMA.SCHEMATA;

SHOW COLUMNS FROM INFORMATION_SCHEMA.TABLES;

SELECT TABLE_NAME FROM INFORMATION_SCHEMA.TABLES 
WHERE TABLE_SCHEMA = 'devmaison' 
ORDER BY TABLE_ROWS DESC;

SHOW COLUMNS FROM INFORMATION_SCHEMA.COLUMNS;

SELECT COLUMN_NAME, COLUMN_KEY 
FROM INFORMATION_SCHEMA.COLUMNS 
WHERE TABLE_SCHEMA = 'devmaison' 
AND TABLE_NAME = 'gymnases' 
AND COLUMN_KEY = 'PRI';

SELECT COLUMN_NAME, COLUMN_TYPE 
FROM INFORMATION_SCHEMA.COLUMNS 
WHERE TABLE_SCHEMA = 'devmaison' 
AND TABLE_NAME IN ('sportifs');

SELECT * 
FROM INFORMATION_SCHEMA.TABLE_CONSTRAINTS 
WHERE TABLE_SCHEMA = 'devmaison' 
AND TABLE_NAME = 'seances';

SELECT COLUMN_NAME, CONSTRAINT_NAME 
FROM INFORMATION_SCHEMA.KEY_COLUMN_USAGE 
WHERE TABLE_SCHEMA = 'devmaison' 
AND TABLE_NAME = 'entrainer' 
AND CONSTRAINT_NAME LIKE '%FK%';

SELECT DISTINCT TABLE_NAME 
FROM INFORMATION_SCHEMA.TABLE_CONSTRAINTS t1
WHERE TABLE_SCHEMA = 'devmaison' 
AND NOT EXISTS (
    SELECT 1 FROM INFORMATION_SCHEMA.TABLE_CONSTRAINTS t2 
    WHERE t2.TABLE_NAME = t1.TABLE_NAME 
    AND t2.CONSTRAINT_NAME LIKE '%FK%'
);

SELECT DISTINCT TABLE_NAME 
FROM INFORMATION_SCHEMA.COLUMNS 
WHERE TABLE_SCHEMA = 'devmaison' 
AND DATA_TYPE = 'varchar';
